package school;

public class Recursion {
     public static void main(String[] args) {
		int sum=0;
    	 for(int i=1;i<=100;i++) {
    		 sum+=i;
    		 }
    	 System.out.println(sum);
    	   	 
    	 Recursion r=new Recursion();
    	 int sum1=r.getsum(100);
    	 System.out.println("sum="+sum1);
    	 
    	 
	}
     public int getsum(int n) {
    	 if(n==1) {
    		 return 1;
    	 }else {
    		 return n+ getsum(n-1);
    	 }
     }
     
}
